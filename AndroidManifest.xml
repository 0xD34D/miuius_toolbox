<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="us.miui.toolbox"
    android:versionCode="8"
    android:versionName="1.1.3" >

    <uses-sdk android:minSdkVersion="15" />

    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:icon="@drawable/icon"
        android:label="@string/app_name" >
        <activity
            android:name=".MIUIToolboxActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".NavbarOrderSelector"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".BatteryCalibrationActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".AndroidIDToolActivity"
            android:label="@string/app_name" >
        </activity>

        <receiver
            android:name="us.miui.receiver.BootReceiver"
            android:enabled="true"
            android:exported="true"
            android:label="BootReceiver" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>
        <!--
        <receiver android:name="us.miui.service.AdbWifiService$WifiStateChangeReceiver"
            android:enabled="true"
            android:exported="true"
            android:label="WifiStateChangeReceiver" >
            <intent-filter>
                <action android:name="android.net.wifi.STATE_CHANGE" />
            </intent-filter>
        </receiver>
        -->
        <service
            android:name="us.miui.service.AdbWifiService"
            android:enabled="true" />

        <receiver
            android:name="us.miui.provider.AdbWifiWidgetProvider"
            android:icon="@drawable/widget_adb_on"
            android:label="ADB WiFi Widget" >
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/adb_widget_info" />
        </receiver>
    </application>

</manifest>